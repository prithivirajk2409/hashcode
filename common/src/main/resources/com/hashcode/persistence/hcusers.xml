<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hashcode.persistence.HCUsers">
	<insert id="upsert" parameterType="HCUsers">
	<![CDATA[ 
		INSERT /*Insert*/   INTO hcusers 
			(user_name, password, email_id, created, updated)
		VALUES
			(#{userName}, #{password}, #{emailId}, now(), now())
	]]>
	</insert>
	
	<select id="getUserByUserName" parameterType="java.util.Map" resultType="HCUsers">
	<![CDATA[ 
		SELECT 
			* 
		FROM 
			hcusers
		WHERE 
			user_name = #{userName} 
	]]>
	</select>
	
	
	<select id="getUserByEmailId" parameterType="java.util.Map" resultType="HCUsers">
	<![CDATA[ 
		SELECT 
			* 
		FROM 
			hcusers
		WHERE 
			email_id = #{emailId} 
	]]>
	</select>
</mapper>